
    <div class="row">
    <div id="addBurger" class="col-md-12 text-center"><input id="burgerInput" placeholder="enter burger here"></div>
  </div>

  <div class="row">
    <div class="col-md-12 text-center" style="padding: 0.5%"><button id="createBurger">Add burger</button></div>
  </div>
  <div class="row">
    <div class="col-md-6  text-center" >
      <h3>Burgers</h3>
      <ul style="list-style-type: none">
  {{#each burgers}}
    {{#unless devoured}}
    <div class="row">
    <div class="col-md-8  align-middle" > {{> burgers/burger-block}}</div>
     <div class="col-md-2 align-middle" ><button class="btn" id={{id}}>Devour it!</button></div> 
     <div class="col-md-2" > </div>
      </div>
    {{/unless}}
  {{/each}}
</ul>


    </div>
    <div class="col-md-6  text-center" >
      <h3>Devoured Burgers</h3>
      <ul style="list-style-type: none">
  {{#each burgers}}
    {{#if devoured}}
    <div class="row">
    <div class="col-md-8  text-center" > {{> burgers/burger-block}}</div>
     <div class="col-md-4  text-center" ></div> 
      </div>
    {{/if}}
  {{/each}}
</ul>



    </div>
  </div>
</div>












